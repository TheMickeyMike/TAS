-F client_secret=cb9d3409131a231ba4b2639b36028857037d92041f8e8620d38f9a5c0ae1d95a \
-F redirect_uri=urn:ietf:wg:oauth:2.0:oob \
-X POST http://localhost:3000/oauth/token




